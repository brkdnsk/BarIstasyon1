@model List<ResultCoffeeRecipeDto>
@{
    ViewData["Title"] = "Tüm Tarifler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-hover:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

    .truncate-description {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 72px;
    }

    @@keyframes fadeInCard {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .fade-in {
        animation: fadeInCard 0.6s ease-in-out;
    }
</style>

<h2 class="mb-4">☕ Tüm Kahve Tarifleri</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz hiç tarif bulunamadı.</div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 fade-in">
                <div class="card h-100 shadow card-hover">
                    <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@item.Title">@item.Title</h5>
                        <p class="card-text truncate-description">@item.Description</p>
                        <a href="/Coffee/Detail/@item.Id" class="btn btn-sm btn-outline-primary mt-auto">
                            <i class="bi bi-cup-hot me-1"></i> Detay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
