@model List<ResultEquipmentDto>
@{
    ViewData["Title"] = "Ekipmanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">☕ Kahve Demleme Ekipmanları</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p><strong>Kullanım:</strong> @item.Usage</p>
                    <p><strong>Tür:</strong> @item.Type</p>
                </div>
            </div>
        </div>
    }
</div>
