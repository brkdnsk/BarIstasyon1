<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">🔧 Admin Paneli</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="AdminCoffeeRecipe" asp-action="Index">Tarif Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="AdminEquipment" asp-action="Index">Ekipman Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="User" asp-action="Logout">Çıkış</a>
                </li>
            </ul>
        </div>
    </nav>
    

    <div class="container py-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 border-top">
        <small class="text-muted">© 2025 Baristasyon Admin</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
