@model Baristasyon.Application.Dtos.CreateCoffeeRecipeDto

@{
    ViewData["Title"] = "Yeni Tarif Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.ApiError != null)
{
    <div class="alert alert-danger">API Hatası: @ViewBag.ApiError</div>
}

<h2 class="mb-4">☕ Yeni Tarif Ekle</h2>

<form asp-area="Admin" asp-controller="AdminCoffeeRecipe" asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Demleme Yöntemi</label>
        <input asp-for="Method" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Demleme Süresi (dk)</label>
        <input asp-for="BrewTime" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Malzemeler</label>
        <textarea asp-for="Ingredients" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Görsel URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Admin/AdminCoffeeRecipe" class="btn btn-secondary">İptal</a>
</form>
