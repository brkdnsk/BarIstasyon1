@model Baristasyon.Application.Dtos.UpdateCoffeeRecipeDto

@{
    ViewData["Title"] = "Tarif Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">✏️ Tarif Güncelle</h2>

<form asp-area="Admin" asp-controller="AdminCoffeeRecipe" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Demleme Yöntemi</label>
        <input asp-for="Method" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Demleme Süresi (dk)</label>
        <input asp-for="BrewTime" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Malzemeler</label>
        <textarea asp-for="Ingredients" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Görsel URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Admin/AdminCoffeeRecipe" class="btn btn-secondary">İptal</a>
</form>
