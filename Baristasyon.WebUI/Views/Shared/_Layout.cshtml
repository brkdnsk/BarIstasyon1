<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Baristasyon</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f1ea;
            color: #5e4b3c;
        }

        .bg-coffee {
            background-color: #8c7051;
        }

        .navbar .nav-link {
            color: #fff !important;
            transition: color 0.3s ease;
        }

            .navbar .nav-link:hover {
                color: #f4d06f !important;
                text-decoration: underline;
            }

        .btn-coffee {
            background-color: #8c7051;
            color: #fff;
            border-radius: 12px;
            border: none;
        }

            .btn-coffee:hover {
                background-color: #7a6044;
                color: #fff;
            }

        .card {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

        input.form-control,
        textarea.form-control,
        select.form-select {
            border: 1px solid #ccc;
            border-radius: 12px;
            background-color: #fff;
            color: #5e4b3c;
        }

        footer {
            background-color: #f4f1ea;
            color: #5e4b3c;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-coffee shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">☕ Baristasyon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/CoffeeRecipe"><i class="fa-solid fa-mug-hot me-1"></i>Tarifler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Equipment"><i class="fa-solid fa-gears me-1"></i>Ekipmanlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/JobPost"><i class="fa-solid fa-briefcase me-1"></i>İş İlanları</a></li>

                    <!-- ✅ Favorilerim -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Favorite">
                            <i class="fa-solid fa-heart me-1"></i> Favorilerim
                        </a>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="/User/Login"><i class="fa-solid fa-right-to-bracket me-1"></i>Giriş</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User/Register"><i class="fa-solid fa-user-plus me-1"></i>Kayıt Ol</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        @RenderBody()
    </div>

    <footer class="text-center py-3 border-top small">
        <span>© @DateTime.Now.Year Baristasyon — Kahveyle Kodlayanların Mekânı ☕</span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
