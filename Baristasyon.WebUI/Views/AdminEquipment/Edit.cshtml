@model Baristasyon.Application.Dtos.UpdateEquipmentDto

@{
    ViewData["Title"] = "Ekipman Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-coffee text-white rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-pen me-2"></i> Ekipman Güncelle</h4>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ekipman Adı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Usage" class="form-label">Kullanım Amacı</label>
                    <input asp-for="Usage" class="form-control" />
                    <span asp-validation-for="Usage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-check me-1"></i> Güncelle
                    </button>
                </div>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-coffee {
        background-color: #8c7051;
        color: #fff;
    }
</style>
