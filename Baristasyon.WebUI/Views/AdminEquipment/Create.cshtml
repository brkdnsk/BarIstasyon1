@using Baristasyon.Application.Dtos
@model CreateEquipmentDto

@{
    ViewData["Title"] = "Yeni Ekipman Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-coffee text-white rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-gears me-2"></i> Yeni Ekipman Ekle</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ekipman Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Chemex, Hario V60..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Usage" class="form-label">Kullanım Amacı</label>
                    <input asp-for="Usage" class="form-control" placeholder="Pour-over, espresso, french press..." />
                    <span asp-validation-for="Usage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ekipman hakkında açıklama..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="UserId" value="@Context.Session.GetInt32("UserId")" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-plus me-1"></i> Ekle
                    </button>
                </div>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-coffee {
        background-color: #8c7051;
        color: #fff;
    }
</style>
