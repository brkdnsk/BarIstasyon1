@using Baristasyon.Application.Dtos
@model ResultEquipmentDto

@{
    ViewData["Title"] = "Ekipman Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="alert alert-danger p-4 rounded-4 shadow-sm">
        <h4 class="fw-bold">⚠️ Silme Onayı</h4>
        <p class="mb-3">"<strong>@Model.Name</strong>" isimli ekipmanı silmek istediğinize emin misiniz?</p>

        <form method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash me-1"></i> Evet, Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fa fa-times me-1"></i> Vazgeç
            </a>
        </form>
    </div>
</div>
