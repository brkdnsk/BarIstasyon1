@using Baristasyon.Application.Dtos
@model List<ResultEquipmentDto>

@{
    ViewData["Title"] = "Ekipmanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-coffee">Ekipmanlar</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Yeni Ekipman
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">Hiç ekipman bulunamadı.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@item.ImageUrl" alt="Kahve Görseli" class="img-fluid" />
                        <div class="card-body">
                            <h5 class="card-title text-coffee">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="text-muted small">🔧 <strong>Kullanım:</strong> @item.Usage</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fa fa-edit me-1"></i> Düzenle
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="get" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    <i class="fa fa-trash me-1"></i> Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .text-coffee {
        color: #8c7051;
    }

    .btn-primary {
        background-color: #8c7051;
        border-color: #8c7051;
    }

        .btn-primary:hover {
            background-color: #7a6044;
            border-color: #7a6044;
        }

    .card {
        border-radius: 14px;
    }
</style>

