@model CoffeeRecipeDetailViewModel
@{
    ViewData["Title"] = Model.Recipe.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h3 class="fw-bold">@Model.Recipe.Title</h3>
            <p>@Model.Recipe.Description</p>
            <p><strong>Demleme:</strong> @Model.Recipe.Method</p>
            <p><strong>Süre:</strong> @Model.Recipe.BrewTime dakika</p>

            <!-- ✅ Favori Butonu -->
            <form method="post" asp-action="ToggleFavorite" asp-controller="Favorite"
                  asp-route-userId="@Model.CurrentUserId" asp-route-recipeId="@Model.Recipe.Id" class="mt-3">
                <button type="submit" class="btn @(Model.IsFavorite ? "btn-danger" : "btn-outline-danger")">
                    <i class="fa @(Model.IsFavorite ? "fa-heart" : "fa-regular fa-heart") me-1"></i>
                    @(Model.IsFavorite ? "Favoriden Kaldır" : "Favoriye Ekle")
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">💬 Yorumlar</h5>
        </div>
        <div class="card-body">
            @if (Model.Reviews.Any())
            {
                foreach (var comment in Model.Reviews)
                {
                    <div class="border-bottom pb-2 mb-2">
                        <div class="fw-semibold">@comment.Username</div>
                        <div class="text-muted small">@comment.CreatedAt.ToString("dd MMM yyyy HH:mm")</div>
                        <p class="mb-0">@comment.Comment</p>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Henüz yorum yapılmamış.</p>
            }
        </div>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-light">
            <h5 class="mb-0">📝 Yorum Ekle</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddReview" method="post">
                <input type="hidden" asp-for="NewReview.UserId" />
                <input type="hidden" asp-for="NewReview.CoffeeRecipeId" />

                <div class="mb-3">
                    <textarea asp-for="NewReview.Comment" class="form-control" placeholder="Yorumunuzu yazın..." rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-paper-plane me-1"></i> Gönder
                </button>
            </form>
        </div>
    </div>

    <div class="mb-3">
        <strong>⭐ Ortalama Puan:</strong>
        @Model.AverageRating.ToString("0.0") / 5
        <span class="text-muted">(@Model.RatingCount oy)</span>
    </div>

    <form asp-action="Rate" method="post" class="mb-4">
        <input type="hidden" asp-for="NewRating.UserId" />
        <input type="hidden" asp-for="NewRating.CoffeeRecipeId" />

        <label for="score">Puan Ver:</label>
        <select asp-for="NewRating.Score" class="form-select w-auto d-inline-block ms-2 me-2">
            <option value="1">⭐ 1</option>
            <option value="2">⭐ 2</option>
            <option value="3">⭐ 3</option>
            <option value="4">⭐ 4</option>
            <option value="5">⭐ 5</option>
        </select>

        <button type="submit" class="btn btn-sm btn-success">
            <i class="fa fa-star me-1"></i> Oy Ver
        </button>
    </form>
</div>
