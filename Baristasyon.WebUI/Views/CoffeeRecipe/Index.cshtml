@using Baristasyon.Application.Dtos
@model List<ResultCoffeeRecipeDto>

@{
    ViewData["Title"] = "Kahve Tarifleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-coffee fw-bold"><i class="fa-solid fa-mug-hot me-2"></i>Kahve Tarifleri</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Henüz tarif eklenmemiş.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var recipe in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card recipe-card border-0 h-100 shadow-sm">
                        <img src="/images/coffee-placeholder.png" class="recipe-img mx-auto d-block mt-3" />
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-coffee">@recipe.Title</h5>
                            <p class="text-muted small mb-1">@recipe.Method</p>
                            <p class="text-muted small">⏱️ @recipe.BrewTime dk</p>
                            <a href="/CoffeeRecipe/Details/@recipe.Id" class="btn btn-coffee w-100 mt-2">Detay</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .text-coffee {
        color: #5e4b3c;
    }

    .btn-coffee {
        background-color: #8c7051;
        color: white;
        border: none;
        border-radius: 10px;
    }

        .btn-coffee:hover {
            background-color: #7a6044;
            color: #fff;
        }

    .recipe-card {
        border-radius: 18px;
        background-color: #fff;
        transition: transform 0.2s ease-in-out;
    }

        .recipe-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
        }

    .recipe-img {
        width: 100px;
        height: 100px;
        object-fit: contain;
        border-radius: 50%;
        background-color: #f4f1ea;
    }

    body {
        background-color: #f4f1ea;
    }
</style>
