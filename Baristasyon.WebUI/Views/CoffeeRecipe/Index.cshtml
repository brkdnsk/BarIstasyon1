@using Baristasyon.Application.Dtos

@model List<ResultCoffeeRecipeDto>
@{
    ViewData["Title"] = "Kahve Tarifleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f4f1ea;
    }

    .card-coffee {
        background-color: #fff;
        border: none;
        border-radius: 18px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-coffee:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.2rem;
        color: #5e4b3c;
    }

    .btn-coffee {
        background-color: #8c7051;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px 16px;
        font-weight: 600;
    }

        .btn-coffee:hover {
            background-color: #7a6044;
        }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #5e4b3c;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

        .section-title i {
            margin-right: 0.5rem;
        }
</style>

<div class="container mt-4">
    <h2 class="section-title"><i class="fa-solid fa-mug-hot"></i> Kahve Tarifleri</h2>

    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card card-coffee h-100">
                    <img src="@recipe.ImageUrl" alt="Kahve Görseli" class="img-fluid" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="text-muted">
                            @(recipe.Description?.Length > 90 ? recipe.Description.Substring(0, 90) + "..." : recipe.Description)
                        </p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-coffee w-100">
                                <i class="fa-solid fa-eye me-1"></i> Detay
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
