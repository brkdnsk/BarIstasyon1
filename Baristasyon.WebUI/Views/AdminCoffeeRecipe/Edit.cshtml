@using Baristasyon.Application.Dtos
@model UpdateCoffeeRecipeDto
@{
    ViewData["Title"] = "Tarif Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header bg-coffee text-white rounded-top-4">
            <h4 class="mb-0 py-2">
                <i class="fa-solid fa-pen-to-square me-2"></i>Tarif Güncelle
            </h4>
        </div>

        <div class="card-body p-5 bg-light rounded-bottom-4">
            <form method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
                        <input asp-for="Title" class="form-control border-1 shadow-sm" placeholder="Örn: V60 Demleme Tarifi" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Method" class="form-label fw-semibold">Demleme Yöntemi</label>
                        <input asp-for="Method" class="form-control border-1 shadow-sm" placeholder="Örn: V60, Chemex, French Press" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="BrewTime" class="form-label fw-semibold">Süre (dk)</label>
                        <input asp-for="BrewTime" type="number" class="form-control border-1 shadow-sm" />
                    </div>

                    <div class="col-md-8">
                        <label asp-for="Ingredients" class="form-label fw-semibold">Malzemeler</label>
                        <textarea asp-for="Ingredients" class="form-control border-1 shadow-sm" rows="2" placeholder="Örn: 15g kahve, 250ml su"></textarea>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control border-1 shadow-sm" rows="4" placeholder="Tarif detaylarını buraya yazınız..."></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-coffee rounded-3 px-4">
                        <i class="fa-solid fa-check me-1"></i> Güncelle
                    </button>
                </div>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-4">@ViewBag.Error</div>
            }
        </div>
    </div>
</div>

<style>
    .btn-coffee {
        background-color: #8c7051;
        color: white;
        border: none;
    }

        .btn-coffee:hover {
            background-color: #7a6044;
        }

    .form-label {
        color: #5e4b3c;
    }

    .form-control {
        border-radius: 12px;
    }

    textarea.form-control {
        resize: vertical;
    }
</style>
